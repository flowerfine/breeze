<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.sliew.scaleph.dao.mapper.master.workflow.WorkflowTaskInstanceMapper">
    <resultMap id="BaseResultMap" type="cn.sliew.scaleph.dao.entity.master.workflow.WorkflowTaskInstance">
        <result column="id" property="id"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="editor" property="editor"/>
        <result column="update_time" property="updateTime"/>
        <result column="workflow_instance_id" property="workflowInstanceId"/>
        <result column="step_id" property="stepId"/>
        <result column="task_id" property="taskId"/>
        <result column="stage" property="stage"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="message" property="message"/>
    </resultMap>

    <resultMap id="WorkflowTaskInstanceVOMap" type="cn.sliew.scaleph.dao.entity.master.workflow.WorkflowTaskInstanceVO">
        <result column="id" property="id"/>
        <result column="creator" property="creator"/>
        <result column="create_time" property="createTime"/>
        <result column="editor" property="editor"/>
        <result column="update_time" property="updateTime"/>
        <result column="step_id" property="stepId"/>
        <result column="task_id" property="taskId"/>
        <result column="stage" property="stage"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="message" property="message"/>
        <association column="workflow_instance_id" property="workflowInstance"
                     select="cn.sliew.scaleph.dao.mapper.master.workflow.WorkflowInstanceMapper.get">
        </association>
    </resultMap>

    <sql id="Base_Column_List">
        id
        , creator, create_time, editor, update_time,
        workflow_instance_id, step_id, task_id, stage, start_time, end_time, message
    </sql>

    <select id="list" resultMap="WorkflowTaskInstanceVOMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM workflow_task_instance
        WHERE step_id = #{stepId}
    </select>

    <select id="get" resultMap="WorkflowTaskInstanceVOMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM workflow_task_instance
        WHERE id = #{id}
    </select>
</mapper>
